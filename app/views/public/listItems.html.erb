<html>

<body>
 
 
 <div class="row">
		<div class="span3">
			
			
			
			<!--Search Functionality for Items-->

			 <%=form_tag(:controller=>"public",:action=>'searchItems') do %>


			<%= text_field_tag(:search, params[:search], :placeholder => "Search Items", :id => "searchTag") %>  	  
			<%= submit_tag "Search", :name => nil,:class=>'btn' %> 

		 <% end %> 
						<!--End of Search Functionality for Items-->

			
			
			
			
			
				<div class="leaderboard">
			<h4> Top Items  </h4>
			 
 	<%@allItems.each do |item|%>
          		 		 
 <table class='table-hover'>
 <tr><td>	<%=simple_format(word_wrap(item.name))%> </td></tr>
 
		<%end%>	
		</table>
	 	</div>
	
	</div>
	
	 	<div class="span8">
 
<h2> Items for Sale  </h2>
  
	<br>
		<%= will_paginate @items %>
	
<table class="table">
 
	<%@items.each do |item|%> 	 
	    
	
	<tr>
			<td> 
				<div >
				 <h3 class="text-error"><%=item.name%></h3></div>
				<b> Posted By: </b><%=item.member_username%>
 				<b> 	on </b> <%=item.created_at.strftime("%B %e %Y") %>
			</td>
		</tr>
		<tr>
				<td>
				<%= image_tag item.itemphoto.url(:medium) %>
				</td>
		</tr>	 		  			 	   
	
		<tr>	
				<td>	
				
		<div class="lead">			 
			 	<p><%=simple_format(word_wrap(item.content,:line_width=>300))%></div></p>
			
			</td></tr>
				
							
 
	
		<%end%>
			</tr>
	
<br>
	
	</table>
	<%= will_paginate @items %>
	 <h3><%=flash[:notice]%></h3> 
	
 
 
 </div>
 </div>
</body>
	
</html>
 
