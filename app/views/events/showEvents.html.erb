
<html>
 

<body>
 

 
<div class="btn">
<%= link_to("Back", {:action => 'listEvents'}) %> </div>

<div class="table">
  <h2>Show Event</h2>
   <table summary="Category detail view">
    <tr>
      <th>Name</th>
      <td><%= @event.name %></td>
    </tr>
	<tr><th>Event picture</th>
			<td>
			<%= image_tag @event.eventphoto.url(:medium) %>
			</td>
	</tr>
    <tr>
      <th>Address</th>
      <td><%= @event.address%></td>
    </tr>
    <tr>
      <th>When</th>
      <td><%= @event.datetime.strftime("%e %b %Y %I:%M %p") %></td>
    </tr>
	<tr>
      <th>Event Description</th>
      <td><%= @event.description%></td>
    </tr>
	

    <tr>
      <th>Created</th>
      <td><%= @event.created_at.strftime("%e %b %Y %I:%M %p") %></td>
    </tr>
 <tr>
      <th>Created By</th>
      <td><%= @event.admin_username %></td>
    </tr>
  </table>
  
 

 
 

</div>
</body>
</html>