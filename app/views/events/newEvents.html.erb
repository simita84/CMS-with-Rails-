 
<html>
 

<body>
	
	 
	

<div >
  <h2>Create Event</h2>

<!--<%= "You are adding the category number : #{@event_count}"%>-->
 
 
<%= render 'shared/event_error_messages_html.erb' %>

  <%= form_for(:event, :url => {:action => 'createEvents'}) do |f| %>
  
  <table summary="Subject form fields">

  <tr>
    <th>Event Name</th>
    <td><%= f.text_field :name, :maxlength=>"100" %></td>
  </tr>
  <tr>
    <th>Address</th>
    <td><%= f.text_field(:address) %></td>
  </tr>
  <tr>
    <th>When</th>
    <td class="control-label">

 <%=f.datetime_select :datetime ,:ampm=>true%>

    </td>
  </tr>
  <tr>
    <th>Duration</th>
    <td><%= f.text_field(:duration) %></td>
  </tr>
<tr>
    <th>Description</th>
    <td><%= f.text_area(:description,size: "60x12") %></td>
  </tr>
	<tr>	<th>Event Picture</th>
		<td>

<%=f.file_field(:eventphoto) %>	</td>
		</tr>
<tr>
    <th>Created By:</th>
    <td><%=session[:username]%></td>
  </tr>
<tr>
	<td>
 
    <%= submit_tag "Create Event",:class=>'btn' %>
 </td>
<td> 
<%= link_to("Cancel", {:action => 'listEvents'},:class=>'btn') %> </td>
</tr>
</table>
    
    
  <% end %>
</div>

 
</body>
</html>