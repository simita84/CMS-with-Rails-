<html>
 <body>		
 
 <%=form_for(:review,:url=>{:action=>'updateReviews',:id =>@review.id,:product_id=>@product.id}) do |f| %>
 	<table class="table">
	 			<tr>
					<th>Reviews Title</th>
					<td>
						<%=f.text_field(:title)%>
					</td>
				</tr>
				<tr>
					<th>Reviews Contents</th>
					<td>
						<%=f.text_area(:content,size: "60x12")%></td>
					</tr>
					<tr>
							<th>Posted By</th>
					 	<td>
							<%=@review.member_username%>
							 </td>
		 			</tr>
			<tr>
				<td> 	
					<%=submit_tag "Edit Reviews",:class=>'btn'%> 	 
				</td>
	 	        <td>
				 	<%=link_to("CANCEL",:action=>'listReviews',:product_id=>@product.id},:class=>"btn")%></div>
						</td>
	 				</tr>
	 
					<%end%>
					
					</table>
					
					<div class="alert">
					<% @review.errors.full_messages.each do |msg| %>
					        <li>*<%= msg %></li>
					      <% end %>
					</div>
 	</body>
	</html>
