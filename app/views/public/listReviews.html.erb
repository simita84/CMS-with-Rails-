 <h2 class="page-header text-center"> <%=@product.title%> 's  Reviews</h2>
 <%= will_paginate @reviews %>
 <div class="container">
 	<div class="row ">
 		<div class="span2 well">
 			<nav>
					<ul class="nav nav-pills nav-stacked">  
						<li class="nav-header">	
							<h4>Review Categories </h4>
						</li>
						<%@products.each do |product|%> 	 
 						 	<li><%=link_to(product.title,:controller=>'public',:action=>'listReviews', 	:product_id=>product.id) %>  	 </li>
						<%end%>
					 <ul>
 				</nav>
 			
 		</div>
 		

 
	<div class="span9">
	  
			 
		 <%if @reviews == []%>
		  <p>
		  	<%="Not Reviewed yet"%>
		  </p>
		 <%else%>
				<% @reviews.each do |review|%>

				<h3> <%=review.title	%> </h3>
				 
			 <div class="row">
			 	<div class="span2 image_dimension">		
			 		<%= image_tag(review.reviewphoto.url(:medium),:class=> "img-rounded") %> 

			 	 
			 	</div>
			 	<div class="span4 well">
			 		<pre> <%= review.content%> </pre>
			 	
			 	 <h5>
				Posted by : <%=review.posted_by%> On  
				<%=review.created_at.strftime("%e %b %Y %I:%M %p") %>     
				 </h5>
			 	</div>
			 </div>

  			
			  
	   		 
	 		 
 	<%end%>	 	 
 <%end%>
	
				 
		 			 
		 
  
 </div>
 </div> 