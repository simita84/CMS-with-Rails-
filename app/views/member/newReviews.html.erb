<html>
<body>
  
	<h2 class="page-header">Create new reviews</h2>

	 
<%= render 'shared/review_error_messages.html.erb' %>

 	<%=form_for(:review, :url => {:action=>'createReviews', :product_id => @product.id}) do |f| %>

	<table class="table">
 	<tr>
    	<th>Title</th>
    	<td> <%=f.text_field(:title)%></td>
	</tr>
  		<th>Review</th>
		<td><%=f.text_area(:content,size: "60x12")%></td>
    </tr>
    <tr>
    	<th>Review picture</th>
    	<td> <%=f.file_field(:reviewphoto)%></td>
	</tr>	
		<th>Author</th>
		<td><%= session[:username]%></td>
    </tr>
	<tr>
		<td>
 	    <%=submit_tag "Create Review",:class=>'btn'%> 
		<%=link_to("Cancel",{:action=>'listReviews',:product_id=>@product.id},:class=>'btn')%>
     </td>
 </tr>
 </table>
<% end %>
 
 
	 </body>
	</html>