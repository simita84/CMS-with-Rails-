<html>
 

<body>
	 <h3 class="page-header">Create New Item</h3>
	
 <%= render 'shared/item_error_message.html.erb' %>
	 
<%=form_for(:item,:url=>{:action=>'createItem'}) do |f| %>
 
<table class="table">
	 
	
<tr>
		<th>Item Name</th>
		<td>	<%=f.text_field(:name)%></td>
		
</tr>

 
<tr>
		<th>Item Content </th>
			<td>	<%=f.text_area(:content,size: "60x12")%>
			</td>
</tr>
<tr>

	<th>Item Picture</th>
<td>

 <%=f.file_field(:itemphoto) %></td>
	</tr>
<tr>
		<th>Posted By</th>
		<td>
				<%=session[:username]%>
			</td></tr>
			
		 <tr>
		 	<td></td>
	 		<td >
				<%=submit_tag "Create item",:class=>"btn"%>  
				<%=link_to("CANCEL",{:action=>'index',:id=>@item.id},:class=>"btn")%></td></tr>
	
	 <%end%>
 
 </table>
	</div>
 </body>
</html>