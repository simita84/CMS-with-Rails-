<html>
 <body>		
 
 
<%= render 'shared/review_error_messages.html.erb' %>

 <%=form_for(:review,:url=>{:action=>'updateReviews',:id =>@review.id,:product_id=>@product.id}) do |f| %>
 	
<h3>Modify Review</h3>
<br>
 	<table class="table">
	 			<tr>
					<th>Reviews Title</th>
					<td>
						<%=f.text_field(:title)%>
					</td>
				</tr>
				<tr>
					<th>Reviews Contents</th>
					<td>
						<%=f.text_area(:content,size: "60x12")%></td>
					</tr>
					 <tr>
    				<th>Change Picture</th>
    				<td> <%=f.file_field(:reviewphoto)%></td>
						</tr>	
					<tr>
							<th>Posted By</th>
					 	<td>
							<%=@review.posted_by%>
							 </td>
		 			</tr>
			<tr><td></td>
				<td> 	
					<%=submit_tag "MODIFY",:class=>'btn'%> 	 
				 
	<%=link_to("CANCEL",{:action=>'listReviews',:product_id=>@product.id},:class=>"btn")%>

						</td>
	 				</tr>
	 
					<%end%>
					
					</table>
					
					 
 	</body>
	</html>
